<html lang="en">
<head>
  <meta charset="UTF-8">
  <style type="text/css">
    body {
      font-family: sans-serif;
    }

    div {
      font-size: 1.3rem;
      font-weight: bold;
      text-align: center;
    }

    input[type=text] {
      font-size: 1.3rem;
      border-radius: 1.3rem;
      padding: 0.5rem;
      width: 80vw;
      margin: 1rem;
    }

    input[type=submit] {

    }
  </style>
  <title>Twitter Threads</title>
</head>
<body>
  <div>
    Enter the URL to the tweet you'd like to get the reply stream for:<br/>
    <form>
      <input type="text"><br/>
      (press enter or click <input type="submit" value="Go">)
    </form>
  </div>
  <script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
  <script type="text/javascript">
    $(document).ready(function() {
      $('form').on('submit', function(e) {
        var url = $('input[type=text]').val();
        var bits = url.match(/twitter\.com\/([^\/]+)\/status\/(\d+)/);
        if (bits) {
          console.log('/' + bits[1] + '/' + bits[2]);
          window.location.href = '/' + bits[1] + '/' + bits[2];
          console.log(':(')
          e.preventDefault();
          e.stopPropagation();
        }
      });
    });
  </script>
</body>
</html>
